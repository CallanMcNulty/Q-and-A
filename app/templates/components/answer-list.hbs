{{#each sortedAnswers as |answer|}}
  <button {{action "vote" 1 answer}}>/\</button>
  <p>{{answer.votes}}</p>
  <button {{action "vote" -1 answer}}>\/</button>
  <p>{{time answer.timestamp}}</p>
  <h3>{{answer.author}} says:</h3>
  <p>{{answer.answerText}}</p>
  {{edit-answer answer=answer}}
  <hr>
{{/each}}
